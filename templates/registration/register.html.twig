{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  
<div class="container border border-primary rounded p-5 my-5">
    {{ form_errors(registrationForm) }}
    <div class="row">
    {{ form_start(registrationForm) }}

    <div class="row">
        <div class="col-2">{{ form_row(registrationForm.civilite) }}</div>
    </div>
    <div class="row">
        <div class="col-6">{{ form_row(registrationForm.prenom) }}</div>
        <div class="col-6">{{ form_row(registrationForm.nom) }}</div>
        <div class="col-6">{{ form_row(registrationForm.pseudo) }}</div>
        <div class="col-6">{{ form_row(registrationForm.email) }}</div>
        <div class="col-8">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Enregistr√©</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
